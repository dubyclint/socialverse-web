WEB3_PROVIDER=https://sepolia.infura.io/v3/your_dev_infura_project_id
WALLET_CONNECT_PROJECT_ID=your_dev_walletconnect_project_id

# RBAC - Development
RBAC_ENABLED=true
DEFAULT_USER_ROLE=user
SUPER_ADMIN_ROLE=admin
ADMIN_EMAIL=admin@localhost
ADMIN_PHONE=+1234567890
MANAGER_ROLE=manager
MODERATOR_ROLE=moderator

# Rate Limiting - Development (Relaxed)
RATE_LIMIT_ENABLED=false
RATE_LIMIT_ADMIN_ACTIONS=10000
RATE_LIMIT_MANAGER_ACTIONS=5000
RATE_LIMIT_USER_ACTIONS=1000
RATE_LIMIT_GUEST_ACTIONS=200
RATE_LIMIT_WINDOW_MS=900000

# Security - Development
SECURITY_HEADERS_ENABLED=false
CORS_ENABLED=true
CORS_ORIGIN=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000,http://127.0.0.1:8080
CORS_CREDENTIALS=true
CORS_MAX_AGE=86400
ENCRYPTION_KEY=dev-32-character-encryption-key-here-min-32-chars
ENCRYPTION_ALGORITHM=aes-256-gcm
ENABLE_HTTPS=false

# Compliance & Security - Development
MAXMIND_LICENSE_KEY=your_dev_maxmind_license_key
MAXMIND_ACCOUNT_ID=your_dev_maxmind_account_id
SANCTIONS_API_KEY=your_dev_sanctions_api_key
SANCTIONS_PROVIDER=your_dev_sanctions_provider
