# ============================================================================
# .env.local - LOCAL DEVELOPMENT ENVIRONMENT VARIABLES
# ============================================================================
# This file is for local development only and should NOT be committed
# Add this to .gitignore: .env.local
# ============================================================================

# Node Environment - Development
NODE_ENV=development
PORT=3000
HOST=localhost
LOG_LEVEL=debug

# Nuxt & API - Local Development
NUXT_PUBLIC_API_URL=http://localhost:8080
NUXT_PUBLIC_WS_URL=ws://localhost:8080
NUXT_PUBLIC_APP_URL=http://localhost:3000
API_BASE_URL=http://localhost:8080
API_TIMEOUT=30000

# Supabase - Use your local/dev project
SUPABASE_URL=https://your-dev-project.supabase.co
SUPABASE_ANON_KEY=your_dev_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_dev_service_role_key_here
SUPABASE_JWT_SECRET=your_dev_jwt_secret_here
NUXT_PUBLIC_SUPABASE_URL=https://your-dev-project.supabase.co
NUXT_PUBLIC_SUPABASE_ANON_KEY=your_dev_anon_key_here

# JWT & Authentication - Development Keys
JWT_SECRET=dev-super-secret-jwt-key-here-make-it-long-and-random
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=dev-refresh-token-secret-different-from-jwt-secret
JWT_REFRESH_EXPIRES_IN=30d
JWT_ALGORITHM=HS256

# OAuth - Development (Optional)
GITHUB_CLIENT_ID=your_dev_github_client_id
GITHUB_CLIENT_SECRET=your_dev_github_client_secret
GOOGLE_CLIENT_ID=your_dev_google_client_id
GOOGLE_CLIENT_SECRET=your_dev_google_client_secret
DISCORD_CLIENT_ID=your_dev_discord_client_id
DISCORD_CLIENT_SECRET=your_dev_discord_client_secret

# Session & Cookies - Development
SESSION_SECRET=dev-session-secret-for-cookies
SESSION_MAX_AGE=604800000
COOKIE_SECURE=false
COOKIE_HTTP_ONLY=true
COOKIE_SAME_SITE=lax
COOKIE_DOMAIN=localhost

# Database - Local PostgreSQL
DATABASE_URL=postgresql://postgres:password@localhost:5432/socialverse_dev
DATABASE_POOL_SIZE=5
DATABASE_IDLE_TIMEOUT=30000
DATABASE_CONNECTION_TIMEOUT=5000

# Redis - Local Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=socialverse_dev:
REDIS_CACHE_TTL=3600

# File Upload - Development
MAX_FILE_SIZE=52428800
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,video/mp4,video/webm,audio/mpeg,audio/wav,application/pdf
MAX_UPLOAD_FILES=10
IMAGE_QUALITY=85
IMAGE_MAX_WIDTH=1920
IMAGE_MAX_HEIGHT=1080
VIDEO_QUALITY=720p
VIDEO_MAX_DURATION=3600

# Media Processing - Development
FFMPEG_PATH=/usr/bin/ffmpeg
FFPROBE_PATH=/usr/bin/ffprobe
ENABLE_VIDEO_PROCESSING=true
ENABLE_IMAGE_OPTIMIZATION=true
MEDIA_TEMP_PATH=/tmp/media

# Socket.io - Development
SOCKET_URL=http://localhost:8080
SOCKET_CORS_ORIGIN=http://localhost:3000
SOCKET_CORS_CREDENTIALS=true
SOCKET_PING_INTERVAL=25000
SOCKET_PING_TIMEOUT=60000

# Firebase & Push Notifications - Development
FCM_SERVER_KEY=your_dev_fcm_server_key_here
FCM_PROJECT_ID=your_dev_firebase_project_id
FCM_PRIVATE_KEY=your_dev_firebase_private_key
FIREBASE_API_KEY=your_dev_firebase_api_key_here
FIREBASE_AUTH_DOMAIN=your_dev_firebase_auth_domain
FIREBASE_PROJECT_ID=your_dev_firebase_project_id
FIREBASE_STORAGE_BUCKET=your_dev_firebase_storage_bucket
