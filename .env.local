ENABLE_BLOCKCHAIN_FEATURES=true
ENABLE_P2P_TRADING=true
ENABLE_ESCROW_SERVICE=true
ENABLE_GIFT_SYSTEM=true
ENABLE_STREAMING=true
ENABLE_CHAT=true
ENABLE_NOTIFICATIONS=true

# Cache - Development
