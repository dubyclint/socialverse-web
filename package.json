{
  "name": "socialverse-web",
  "private": true,
  "type": "module",
  "version": "1.0.0",
  "description": "SocialVerse - A modern social networking platform",
  "author": "SocialVerse Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "nuxt dev",
    "build": "nuxt build",
    "preview": "nuxt preview",
    "generate": "nuxt generate",
    "start": "node .output/server/index.mjs",
    "clean": "rm -rf .nuxt .output .nitro node_modules/.cache dist",
    "clean:build": "npm run clean && npm run build",
    "clean:all": "npm run clean && rm -rf node_modules pnpm-lock.yaml && npm install",
    "build:prod": "npm run clean && npm run lint:fix && npm run typecheck && npm run build",
    "build:analyze": "nuxt build --analyze",
    "build:report": "nuxi analyze",
    "build:docker": "npm run clean:build && npm run optimize",
    "fix:imports": "node scripts/fix-imports-enhanced.js",
    "fix:imports:check": "node scripts/fix-imports-enhanced.js && npm run typecheck",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:check": "eslint . --max-warnings 0",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write --ignore-unknown .",
    "bundle:analyze": "node scripts/bundle-analyzer.js",
    "optimize": "node scripts/optimize-all.js",
    "optimize:routes": "node scripts/optimize-routes.js",
    "pre-commit": "npm run lint:fix && npm run format && npm run typecheck",
    "setup": "npm install && npm run fix:imports && npm run typecheck",
    "verify": "npm run lint && npm run typecheck && npm run build:report",
    "verify:full": "npm run lint:check && npm run typecheck && npm run build:prod && npm run verify"
  },
  "dependencies": {
    "@nuxtjs/color-mode": "^3.5.2",
    "@nuxtjs/supabase": "^2.0.1",
    "@nuxtjs/tailwindcss": "^6.14.0",
    "@pinia/nuxt": "^0.11.2",
    "@supabase/supabase-js": "^2.45.0",
    "@tensorflow/tfjs": "^4.22.0",
    "@tensorflow/tfjs-core": "^4.22.0",
    "@tensorflow/tfjs-layers": "^4.22.0",
    "bcrypt": "^5.1.1",
    "chart.js": "^4.5.1",
    "date-fns": "^4.1.0",
    "emoji-js": "^3.9.0",
    "ethers": "^6.15.0",
    "gun": "^0.2020.1241",
    "jsonwebtoken": "^9.0.2",
    "jwt-decode": "^4.0.0",
    "lodash-es": "^4.17.21",
    "markdown-it": "^14.1.0",
    "multer": "^2.0.2",
    "nuxt": "^4.1.3",
    "pinia": "^3.0.3",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "vue": "^3.5.22",
    "vue-chartjs": "^5.3.2",
    "vue-router": "^4.6.3",
    "unhead": "^2.0.19"
  },
  "devDependencies": {
    "@nuxt/devtools": "^1.7.0",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^20.14.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-vue": "^9.27.0",
    "prettier": "^3.2.5",
    "typescript": "^5.5.4"
  }
}
