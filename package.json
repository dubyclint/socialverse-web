{
  "name": "socialverse-web",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev --host 0.0.0.0",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "start": "node .output/server/index.mjs",
    "start:production": "NODE_ENV=production node .output/server/index.mjs",
    "clean": "rm -rf .nuxt .output dist node_modules/.cache",
    "verify": "node scripts/verify-build.js",
    "build:verify": "npm run build && npm run verify",
    "build:clean": "npm run clean && npm run build",
    "build:production": "NODE_ENV=production npm run build:verify",
    "db:migrate": "node database/setup.js",
    "db:seed": "node database/seed.js",
    "db:reset": "echo 'Use Supabase dashboard to reset database'",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "test": "vitest",
    "test:coverage": "vitest --coverage"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.45.4",
    "@vueuse/core": "^11.1.0",
    "@vueuse/nuxt": "^11.1.0",
    "nuxt": "^3.13.2",
    "vue": "^3.5.10",
    "vue-router": "^4.4.5",
    "pinia": "^2.2.4",
    "@pinia/nuxt": "^0.5.5",
    "gun": "^0.2020.1240",
    "axios": "^1.7.7",
    "ethers": "^6.13.4",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.4.5",
    "markdown-it": "^14.1.0",
    "emojione": "^4.5.0",
    "undici": "^6.19.8",
    "h3": "^1.12.0",
    "ofetch": "^1.4.1",
    "defu": "^6.1.4",
    "consola": "^3.2.3"
  },
  "devDependencies": {
    "@nuxt/devtools": "^1.5.2",
    "@nuxt/eslint-config": "^0.5.7",
    "@nuxt/test-utils": "^3.14.3",
    "@types/node": "^22.7.5",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/bcryptjs": "^2.4.6",
    "@types/markdown-it": "^14.1.2",
    "eslint": "^9.12.0",
    "typescript": "^5.6.3",
    "vitest": "^2.1.2",
    "@vue/test-utils": "^2.4.6",
    "happy-dom": "^15.7.4"
  },
  "engines": {
    "node": ">=18.17.0",
    "npm": ">=9.0.0"
  },
  "packageManager": "npm@10.8.2"
}

