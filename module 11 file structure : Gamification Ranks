// this is the Updated Backend File Structure
server/
└── api/
    └── rank/
        ├── get.ts             # Returns current rank, progress, visibility
        ├── update.ts          # Adds points to user
        ├── config.ts          # Admin rank add/remove/update
        ├── hide-request.ts    # Premium user submits hide/unhide request
        ├── hide-approve.ts    # Admin approves request and grants toggle
        ├── toggle.ts          # User toggles visibility (if approved)
        ├── settings.ts        # Admin sets fee and duration
