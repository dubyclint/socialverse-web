# ============================================================================
# FILE: /.env.example
# ============================================================================
# Copy this file to .env.local and fill in your actual values
# This file should be committed to git (no secrets here)
# ============================================================================

# ============================================================================
# NODE ENVIRONMENT
# ============================================================================
NODE_ENV=development
PORT=8080
HOST=0.0.0.0

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================
APP_NAME=SocialVerse
NUXT_PUBLIC_API_URL=http://localhost:8080
NUXT_PUBLIC_SOCKET_URL=http://localhost:8080
NUXT_PUBLIC_SITE_URL=http://localhost:8080

# ============================================================================
# SUPABASE CONFIGURATION - PUBLIC (Client-side)
# ============================================================================
NUXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NUXT_PUBLIC_SUPABASE_KEY=your-anon-key-here

# ============================================================================
# SUPABASE CONFIGURATION - SERVER-SIDE ONLY (Private)
# ============================================================================
# ⚠️ SECURITY: Keep these secret!
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ============================================================================
# CDN CONFIGURATION
# ============================================================================
NUXT_PUBLIC_CDN_URL=
NUXT_PUBLIC_CDN_ENABLED=false

# ============================================================================
# GUN DATABASE CONFIGURATION
# ============================================================================
NUXT_PUBLIC_GUN_ENABLED=false
NUXT_PUBLIC_GUN_PEERS=

# ============================================================================
# AUTHENTICATION & SECURITY
# ============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars

# ============================================================================
# MAILERSEND EMAIL SERVICE CONFIGURATION
# ============================================================================
# Get these from your MailerSend account
# SMTP Server: smtp.mailersend.net
# Port: 587 (TLS) or 2525 (alternative)
MAILERSEND_SMTP_HOST=smtp.mailersend.net
MAILERSEND_SMTP_PORT=587
MAILERSEND_API_TOKEN=mlsn.8661ed5b883a9a6b12307032bfb3f9e32c4d0d0da7ee604c8545441fbfcc9623
MAILERSEND_SMTP_USERNAME=your-mailersend-username
MAILERSEND_SMTP_PASSWORD=your-mailersend-password
SENDER_EMAIL=noreply@yourdomain.com
SENDER_NAME=Your App Name

# ============================================================================
# FEATURE FLAGS
# ============================================================================
NUXT_PUBLIC_ENABLE_PREMIUM=true
NUXT_PUBLIC_ENABLE_ANALYTICS=true

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
LOG_LEVEL=info
DEBUG=false
